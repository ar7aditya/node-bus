<%- include partials/header -%>
<style>
	.testimonial-card .card-up {
  height: 120px;
  overflow: hidden;
  border-top-left-radius: .25rem;
  border-top-right-radius: .25rem;
}

.aqua-gradient {
    background: linear-gradient(40deg, #f60000, #0c0d0d) !important;
}

.testimonial-card .avatar {
  width: 120px;
  margin-top: -60px;
  overflow: hidden;
  border: 5px solid #fff;
  border-radius: 50%;
}
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
	integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<body>
	<div class="jumbotron">

		<div class="container">
			<section class="mx-auto my-5" style="max-width: 23rem;">
		
				<div class="card testimonial-card mt-2 mb-3">
					<div class="card-up aqua-gradient"></div>
					<div class="avatar mx-auto white">
						<img src=<%=user.photo%>
							class="rounded-circle img-fluid" alt="woman avatar">
					</div>
					<div class="card-body text-center">
						<h4 class="card-title font-weight-bold"><%=user.username%></h4>
						<hr>
						<p><i class="fas fa-quote-left"></i> Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos,
							adipisci</p>
							<button class="btn btn-primary">follow</button>
							<button class="btn btn-outline-success">+</button>
					</div>
				</div>
		
			</section>
		</div>

	</div>


	<div class="jumbotron text-left">
	
		<div class="div-abt">
			<p style="color:white;">
				<span id="clock"></span>
	
			</p>
		</div>
		<% homeData.forEach(function(x) { %>
			<div class="post-home flex">
				<div class="post-content">
	
					<div class="flex postowner">
						<div>
							<% let photo; if(x.userdata.photo==undefined) photo="resources/favicon-32x32.png" ; else
								photo=x.userdata.photo; %>
								<img class="user-dp" src=<%=photo%> alt="" srcset="">
						</div>
	
						<p><a href="/profile/<%=x.userdata.username%>">
								<%= x.userdata.username %>
							</a></p>
	
					</div>
					<h5 id="createat">
						<%= x.post.createat %>
					</h5>
					<%let pt="" ; if(x.post.title.length>51) pt = x.post.title.substring(0,52)+" ..." ;
						else pt = x.post.title %>
						<%let pc="" ; if(x.post.textContent.length>190) pc = x.post.textContent.substring(0,191)+" ..." ;
							else pc = x.post.textContent %>
							<h2 class="title-link"> <a href="/posts/<%=x.post.id%>">
									<%=pt%>
								</a> </h2>
	
							<p id="content-home">
								<%= pc %>
	
							</p>
							<p>
								<%= x.post.date %>
									<%= x.post.time %>
							</p>
	
				</div>
	
	
				<div class="post-img">
					<% let purl; if(x.post.titleimg=="undefined" ){ purl="null" ; %>
						<img src="resources/favicon-32x32.png" srcset="">
	
						<% } else{ purl=x.post.titleimg; %>
							<img src=<%=purl%> alt="" srcset="">
	
							<% } %>
				</div>
	
			</div>
	
			<br>
			<% }) %>
	
	</div>
	<%- include partials/footer -%>